<div {{ attributes.addClass('entity-list-advanced', 'entity-list-advanced--class') }}>

    {# Begin - image #}
    {% if term.field_vih_class_image.value %}
        <div class="entity-list-advanced__image" style="background-image: url({{ term.field_vih_class_image.entity.fileuri | image_style(content.field_vih_class_image[0]['#image_style']) }});"></div>
    {% endif %}
    {# End - image #}

    <!-- Begin - body -->
    <div class="entity-list-advanced__body">

        {# Begin - name #}
        <div class="entity-list-advanced__heading">
            <h2 class="entity-list-advanced__heading__title heading-h4">
                {{ name }}
            </h2>
        </div>
        {# End - name #}

        {# Begin - description #}
        {{ content.description | render | striptags('<!-- -->') }}
        {# End - description #}

    </div>
    <!-- End - body -->

    <!-- Begin - action -->
    <div class="entity-list-advanced__action">
        <button class="btn btn-default" data-toggle="modal" data-target="#class-modal-cp-{{ term.id }}">
            <span class="icon icon-info-circle"></span>
        </button>
    </div>
    <!-- End - action -->

    <!-- Begin - modal -->
    <div class="modal fade" id="class-modal-cp-{{ term.id }}" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                {# Begin - header #}
                <div class="modal-header" style="background-image: url({{ term.field_vih_class_image.entity.fileuri | image_style('modal') }});">
                    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close' | trans }}">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    <h3 class="modal-title heading-h1">{{ name }}</h3>
                </div>
                {# End - header #}

                {# Begin - body #}
                <div class="modal-body">
                    {{ content.description }}
                </div>
                {# End - body #}

            </div>
        </div>
    </div>
    <!-- End - modal -->

</div>
