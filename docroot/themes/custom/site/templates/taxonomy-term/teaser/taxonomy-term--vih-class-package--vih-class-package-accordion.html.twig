{% set random_number = random() %}

<div class="toggler">

    <!-- Begin - desktop tabs -->
    <div class="hidden-xs hidden-sm">
        <ul class="nav nav-tabs nav-justified" role="tablist">
            {% for key, slot in elements['#slots'] %}
                {% set slot_id = "term-"~term.id~"-slot-"~key~"-"~random_number %}

                {% if loop.first %}
                    <li role="presentation" class="active">
                {% else %}
                    <li role="presentation">
                {% endif %}
                    <a href="#" class="toggler__button" data-toggler="#{{ slot_id }}" aria-controls="{{ slot_id }}" role="tab">{{ slot.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <!-- End - desktop tabs -->

    <!-- Begin - responsive tabs -->
    <div class="visible-xs visible-sm">
        <ul class="nav nav-pills nav-stacked">
            {% for key, slot in elements['#slots'] %}
                {% set slot_id = "term-"~term.id~"-slot-"~key~"-"~random_number %}

                {% if loop.first %}
                    <li role="presentation" class="active">
                {% else %}
                    <li role="presentation">
                {% endif %}
                    <a href="#" class="toggler__button" data-toggler="#{{ slot_id }}" aria-controls="{{ slot_id }}" role="tab">{{ slot.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <!-- End - responsive tabs -->

    <!-- Begin - content -->
    <div class="tab-content">

        {% for key, slot in elements['#slots'] %}
            {% set slot_id = "term-"~term.id~"-slot-"~key~"-"~random_number %}

            {% if loop.first %}
                <div role="tabpanel" class="tab-pane toggler__content active" id="{{ slot_id }}">
            {% else %}
                <div role="tabpanel" class="tab-pane toggler__content" id="{{ slot_id }}">
            {% endif %}
                {% for class in slot['classes'] %}
                    {{ class }}
                {% endfor %}
            </div>
        {% endfor %}

    </div>
    <!-- End - content -->

</div>
