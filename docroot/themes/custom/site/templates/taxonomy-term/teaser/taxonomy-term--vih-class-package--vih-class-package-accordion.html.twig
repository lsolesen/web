{% set tab_class_package_id = "tabs-class-package--"~term.id~"--"~random() %}

<div id="{{ tab_class_package_id }}">

    {% for key, slot in elements['#slots'] %}
        {% set slot_id = "tabs-class-package--"~term.id~"--slot--"~key~"--"~random() %}
        <div class="panel panel-default">

            <!-- Begin - heading -->
            <div class="panel-heading" id="heading-{{ class_package_id }}">
                <h4 class="panel-title heading-h5">
                    <a role="button" data-toggle="collapse"
                       data-parent="#{{ tab_class_package_id }}"
                       href="#{{ slot_id }}"
                       aria-expanded="false"
                       aria-controls="collapse-{{ class_package_id }}">
                        {{ slot.name }}
                    </a>
                </h4>
            </div>
            <!-- End - heading -->

            <!-- Begin - body -->
            <div id="{{ slot_id }}" class="panel-collapse collapse" role="tabpanel">

                <div class="panel-body">
                    {% for class in slot['classes'] %}
                        {{ class }}
                    {% endfor %}
                </div>
            </div>
            <!-- End - body -->

        </div>
    {% endfor %}

</div>
