{#
/**
 * @file
 * Theme override for a subject on vih_subscription confirmation page.
 *
 * @see docroot/themes/contrib/bootstrap/templates/field/field.html.twig
 */
#}
{%
  set classes = [
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
  'boxy' ~ label_display,
]
%}
{%
  set title_classes = [
  'boxy__heading',
  label_display == 'visually_hidden' ? 'sr-only',
]
%}

<div{{ attributes.addClass(classes) }}>
  <div{{ title_attributes.addClass(title_classes) }}><h2 class="boxy__heading__title heading-h4">{{ label }}</h2></div>
  {% if multiple %}
  <div class="field--items">
    {% endif %}
    {% for item in items %}
      <div{{ item.attributes.addClass('field--item', 'boxy__body') }}>{{ item.content }}</div>
    {% endfor %}
    {% if multiple %}
  </div>
  {% endif %}
</div>
