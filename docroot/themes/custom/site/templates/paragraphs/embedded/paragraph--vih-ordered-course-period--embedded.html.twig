{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>
    <div class="boxy boxy--confirmation--course-period">
        <div class="boxy__heading">
            <h4 class="boxy__heading__title">{{ content.field_vih_ocp_course_period }}</h4>
        </div>
        <div class="boxy__body">
            {{ content.field_vih_ocp_order_course_slots }}
        </div>
    </div>
</div>
