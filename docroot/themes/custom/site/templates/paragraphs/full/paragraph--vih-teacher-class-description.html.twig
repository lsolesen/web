{%
    set classes = [
    'sectioned',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<section{{ attributes.addClass(classes) }}>
    <div class="sectioned--skewed-angle-top">
        <div class="sectioned--skewed-angle-bottom">

            {% if background_image %}
                <div class="angled-background-image-wrapper">
                    <div class="cover-overlay"></div>
                    <div class="angled-background-image-element" style="background-image: url({{ background_image }})"></div>
                </div>
            {% endif %}

            <div class="sectioned__inner">
                <div class="container">

                    <div class="boxy">
                        <div class="boxy__body">

                            {% if paragraph.field_vih_photo.value %}
                                <div class="row row--equal-height-columns">
                                    <div class="col-xs-12 col-sm-4 col-md-3">
                                        <a href="{{ path('entity.user.canonical', {'user': content.teacher.id}) }}" class="photo element-wrapper-link">

                                            {# Begin - photo #}
                                            {{ content.field_vih_photo }}
                                            {# End - photo #}

                                            {# Begin - name #}
                                            {% if content.teacher.field_vih_user_name_first.value and content.teacher.field_vih_user_name_last.value %}
                                            <div class="photo__overlay">
                                                <div class="photo__overlay__text">
                                                    {{ content.teacher.field_vih_user_name_first.value }}
                                                    {{ content.teacher.field_vih_user_name_last.value }}
                                                </div>
                                            </div>
                                            {% endif %}
                                            {# End - name #}

                                        </a>
                                    </div>
                                    <div class="col-xs-12 col-sm-8 col-md-9">
                                        <div class="content">

                                            {# Begin - heading #}
                                            {{ content.field_vih_heading }}
                                            {# End - heading #}

                                            {# Begin - description #}
                                            {{ content.field_vih_description }}
                                            {# End - description #}

                                        </div>
                                    </div>
                                </div>
                            {% else %}

                                <div class="content">

                                    {# Begin - heading #}
                                    {{ content.field_vih_heading }}
                                    {# End - heading #}

                                    {# Begin - description #}
                                    {{ content.field_vih_description }}
                                    {# End - description #}

                                </div>

                            {% endif %}

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>
