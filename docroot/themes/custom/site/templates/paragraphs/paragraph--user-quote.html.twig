{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>

    {% if background_image %}
        <div class="angled-background-image-wrapper">
            <div class="cover-overlay"></div>
            <div class="angled-background-image-element" style="background-image: url({{ background_image }})"></div>
        </div>
    {% endif %}

    <div class="angled-background-inner">
        <div class="container">
            {{ content.field_heading }}
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-3">{{ content.field_paragraph_person_photo }}</div>
                <div class="col-sm-6 col-sm-8 col-md-9">{{ content|without('field_paragraph_person_photo', 'field_heading') }}</div>
            </div>

        </div>
    </div>
</div>
