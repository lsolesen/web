{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
{% set accordion_random_id = random() %}

<div{{ attributes.addClass(classes) }}>

    <div class="partial partial--single-class-groups">
        <div class="partial__body">

            <!-- Begin - panel -->
            <div class="panel panel-default">

                <!-- Begin - heading -->
                <div class="panel-heading" id="heading-{{ accordion_random_id }}">
                    <h4 class="panel-title heading-h5">
                        <a role="button" data-toggle="collapse"
                           href="#collapse-{{ accordion_random_id }}"
                           aria-expanded="true"
                           aria-controls="collapse-{{ accordion_random_id }}">

                            {{ content.field_vih_scg_group_title }}
                        </a>
                    </h4>
                </div>
                <!-- End - heading -->

                <!-- Begin - body -->
                <div id="collapse-{{ accordion_random_id }}"
                     class="panel-collapse collapse in" role="tabpanel"
                     aria-labelledby="heading-{{ accordion_random_id }}">

                    <div class="panel-body">
                        {{ content.field_vih_scg_classes }}
                    </div>
                </div>
                <!-- End - body -->

            </div>
            <!-- End - panel -->

        </div>
    </div>

</div>
