{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>

    {% if background_image %}
        <div class="paragraph-background-image-container">
            <div class="paragraph-background-image-element" style="background-image: url({{ background_image }})"></div>
        </div>
    {% endif %}

    <div class="paragraph-inner">


        <div class="container">
            {% if node.hasField('field_due_date') %}
                <p class="card-text">
                    {% trans %} Due at: {% endtrans %} {{ content.field_due_date }}
                </p>
            {% endif %}

            {% if node.hasField('field_due_date') %}
                <p class="card-text">
                    {% trans %} Due at: {% endtrans %} {{ content.field_due_date }}
                </p>
            {% endif %}

            {% if node.hasField('field_due_date') %}
                <p class="card-text">
                    {% trans %} Due at: {% endtrans %} {{ content.field_due_date }}
                </p>
            {% endif %}

            {{ content }}
        </div>
    </div>
</div>
