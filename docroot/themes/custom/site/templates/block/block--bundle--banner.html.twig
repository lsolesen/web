<div class="banner" style="background-image: url({{ content.field_image[0]['#markup'] }})">

    <!-- Begin - logo -->
    <div class="banner__logo">
        <svg width='100%' height='100%' viewBox="0 0 100 100" preserveAspectRatio="none">
            <polygon points="107 0, 0 100, 100 100" fill="rgba(0, 188, 255, 0.85)" id="svgoverlay" />
        </svg>

        <div class="banner__logo__image"></div>
    </div>
    <!-- End - logo -->

    <div class="banner__inner">
        <div class="container">

            <!-- Begin - heading -->
            <div class="banner__heading">
                <h1 class="banner__heading__title">{{ content.field_image['#items'].alt }}</h1>
            </div>
            <!-- End - heading -->

            {# Begin - link #}
            {{ content.field_link }}
            {# End - link #}

        </div>
    </div>
</div>
