<div{{ attributes.addClass('banner__inner') }}>

    <!-- Begin - logo -->
    <div class="banner__logo">
        <svg width='100%' height='100%' viewBox="0 0 100 100" preserveAspectRatio="none">
            <polygon points="107 0, 0 100, 100 100" fill="rgba(0, 188, 255, 0.85)" id="svgoverlay" />
        </svg>

        <div class="banner__logo__image"></div>
    </div>
    <!-- End - logo -->

    {% if content.field_image is not empty %}
        {{ content.field_image }}
    {% endif %}

    <!-- Begin - body -->
    <div class="banner__body">

        {{ title_prefix }}
        {% if label %}
            <div class="banner__heading">
                <h1{{ title_attributes.addClass('banner__heading__title') }}>
                    {{ content.field_image['#items'].alt }}
                </h1>
            </div>
        {% endif %}
        {{ title_suffix }}

        {% if content.field_link %}
            <!-- Begin - link -->
            <div class="banner__link">
                {{ content.field_link }}
            </div>
            <!-- End - link -->
        {% endif %}

    </div>
    <!-- End - body -->

</div>
