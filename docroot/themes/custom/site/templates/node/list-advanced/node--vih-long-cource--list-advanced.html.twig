{%
set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
]
%}

<a href="{{ url }}" class="element-wrapper-link entity-list-advanced entity-list-advanced--long-course">

    <!-- Begin - image -->
    <div class="entity-list-advanced__image">

        {# Begin - image #}
        {{ content.field_vih_sc_image }}
        {# End - image #}

        {# Begin - period #}
        {% if content.course_period_start and content.course_period_end %}
            <div class="entity-list-advanced__image__overlay">
                {{ content.course_period_start | format_date('vih_medium_date_short_month') }} - {{ content.course_period_end | format_date('vih_medium_date_short_month') }}
            </div>
        {% endif %}
        {# End - period #}

    </div>
    <!-- End - image -->

    <!-- Begin - body -->
    <div class="entity-list-advanced__body">

        <div class="entity-list-advanced__heading">
            <h2 class="entity-list-advanced__heading__title heading-h4">{{ label }}</h2>
        </div>

        {# Begin - body #}
        {{ content.body }}
        {# End - body #}

    </div>
    <!-- End - body -->

    <!-- Begin - action -->
    <div class="entity-list-advanced__action">
        <button class="btn btn-default">{{ 'Read more' | trans }}</button>
    </div>
    <!-- End - action -->

</a>
